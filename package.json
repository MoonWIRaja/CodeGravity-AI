{
  "name": "codegravity-ai",
  "version": "0.1.0",
  "description": "AI-Powered IDE in Your Browser - Pixel Art Theme",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && bun run build",
    "build:web": "cd apps/web && npm run build",
    "start": "concurrently -n api,web -c blue,green \"npm run start:api\" \"npm run start:web\"",
    "start:api": "cd apps/api && bun run start",
    "start:web": "cd apps/web && npm run preview",
    "db:push": "cd apps/api && bun run db:push",
    "db:generate": "cd apps/api && bun run db:generate",
    "db:studio": "cd apps/api && bun run db:studio",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "bin": {
    "codegravity": "./bin/cli.js"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
